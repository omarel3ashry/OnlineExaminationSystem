@model IEnumerable<Student>
@{
    ViewData["Title"] = "Dashboard | Students";
}
<div class="text">
    <h2 data-text="Dashboard">Dashboard</h2>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>
                        <a class="btn success" asp-action="Grades" asp-route-stId="@student.Id">Grades</a>
                        <a class="btn danger" asp-action="Delete" asp-route-stId="@student.Id">Delete</a>
                    </td>
                </tr>
            }
        else
        {
            <tr>
                <td colspan="3">No Students in this Dept </td>
            </tr>
        }
    </tbody>
</table>

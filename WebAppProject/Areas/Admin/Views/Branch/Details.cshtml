@model Branch
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">ID: <strong> @Model.Id</strong> </p>
                    <p class="card-text">Name: <strong>@Model.Name </strong></p>
                    <p class="card-text">Location: <strong>@Model.Location </strong></p>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-0">
            <a asp-action="Index" asp-controller="Manage" class="btn info">Back to Dashboard</a>
            <a asp-action="Edit" asp-controller="Branch" asp-route-Id="@Model.Id" class="btn btn-success">Edit</a>
            <a asp-action="Delete" asp-controller="Branch" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>